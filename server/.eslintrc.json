{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "import/no-unresolved": "off",
    "no-shadow": "off",
    "import/no-extraneous-dependencies": [
      "error", {
         "devDependencies": false,
         "optionalDependencies": false,
         "peerDependencies": false
      }
  ]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}